import java.util.*;
public class Main
{
	public static void main(String[] args) {
		System.out.println("Enter the limit");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int arr[] = new int[n];
	    int even=0;int odd=0;
	    for(int i=0;i<n;i++){
	        arr[i] = sc.nextInt();
	    }
	    
	    for(int i=0;i<n;i++){
	        if(arr[i]%2 == 0){
	            even = even+1;;
	        }
	        else{
	            odd=odd+1;
	        }
	    }
	    System.out.println("Even Elements are: "+even);
	    System.out.print("Odd Elements are: "+odd);
	    
	}
}
